{
  "name": "trending-commerce-hub",
  "version": "1.0.0",
  "description": "A trending e-commerce aggregator platform showcasing trending clothing items from multiple e-commerce platforms",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "admin",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:admin",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin && npm run build",
    "build:shared": "cd shared && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "e-commerce",
    "aggregator",
    "trending",
    "fashion",
    "clothing",
    "price-comparison",
    "react",
    "node.js",
    "express"
  ],
  "author": "Trending Commerce Hub Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/trending-commerce-hub.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/trending-commerce-hub/issues"
  },
  "homepage": "https://github.com/your-username/trending-commerce-hub#readme"
}
